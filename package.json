    "postcss": "^8.4.14",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-scss": "^4.0.4",
    "postcss-strip-inline-comments": "^0.1.5",
    "prettier": "2.7.1",
    "sass": "^1.52.3",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0"
